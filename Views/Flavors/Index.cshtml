@{
  Layout = "_Layout";
}

@using PSST.Models;
@model List<PSST.Models.Flavor>;

<div class="center">
  <h1>Flavors</h1>

  @if (@Model.Count == 0)
  {
    <h3>Flavors Absent</h3>
  } 

  @foreach (Flavor flavor in Model)
  {
    <li>
      @Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })
    </li>
  }

  <hr>
  <p>@Html.ActionLink("Add new Flavor", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>