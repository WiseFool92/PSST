@{
  Layout = "_Layout";
}

@using PSST.Models;
@* @model List<PSST.Models.Treat>; *@
@model IEnumerable<PSST.Models.Treat>

<h2>Treats!, @User.Identity.Name</h2>
@if (Model.Any())
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>
        @Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })
      </li>
    }
  </ul>
} 
else
{
  <h3>Treats... Nien!</h3>
}

<p>@Html.ActionLink("Add new Treat", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>